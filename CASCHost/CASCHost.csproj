<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="wwwroot\Data\creature\**" />
    <Compile Remove="wwwroot\Data\DBFilesClient\**" />
    <Content Remove="wwwroot\Data\creature\**" />
    <Content Remove="wwwroot\Data\DBFilesClient\**" />
    <EmbeddedResource Remove="wwwroot\Data\creature\**" />
    <EmbeddedResource Remove="wwwroot\Data\DBFilesClient\**" />
    <None Remove="wwwroot\Data\creature\**" />
    <None Remove="wwwroot\Data\DBFilesClient\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot/Data" />
    <Content Remove="wwwroot/Output" />
    <Content Remove="wwwroot\SystemFiles\.build.info" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="1.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="1.1.2" />
    <PackageReference Include="MySqlConnector" Version="0.26.1" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="hosting.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="wwwroot\Output\" />
    <Folder Include="wwwroot\SystemFiles\" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\CASCEdit\CASCEdit.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Start.bat">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <ProjectExtensions><VisualStudio><UserProperties appsettings_1json__JSONSchema="" /></VisualStudio></ProjectExtensions>

</Project>
